<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/exercise_padding">

    <TextView
        android:id="@+id/exercise_mode_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center_horizontal"
        android:text="@string/exercise_mode_title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/exercise_title_size" />

    <TextView
        android:id="@+id/exercise_mode_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="@string/exercise_mode_description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/exercise_mode_button_choice_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:drawableEnd="@drawable/ic_dropdown_black"
            android:text="@string/exercise_mode_mode"
            android:textAllCaps="false"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/exercise_mode_random_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description_random_button"
            android:src="@drawable/ic_random_scale" />

    </LinearLayout>

    <TextView
        android:id="@+id/exercise_mode_duration"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/exercise_mode_duration_left"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:textColor="@android:color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:gravity="center">

        <Button
            android:id="@+id/exercise_mode_button_start_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise_start_button" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/exercise_mode_next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise_next_exercise" />
    </RelativeLayout>

</LinearLayout>