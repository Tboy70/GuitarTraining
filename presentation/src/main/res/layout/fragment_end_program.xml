<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/exercise_padding"
    android:weightSum="100">

    <TextView
        android:id="@+id/fragment_end_program_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center"
        android:text="@string/generic_exercise_end_title_text"
        android:textColor="@android:color/black"
        android:textSize="@dimen/exercise_title_size"/>

    <TextView
        android:id="@+id/fragment_end_program_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="40"
        android:gravity="center_vertical"
        android:text="@string/generic_exercise_end_description_text"
        android:textColor="@android:color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:gravity="center">

        <Button
            android:id="@+id/fragment_end_program_finish_button"
            android:layout_width="@dimen/generic_button_width"
            android:layout_height="@dimen/generic_button_height"
            android:background="@drawable/button_drawable"
            android:text="@string/generic_exercise_end_program_text"
            android:textColor="@android:color/white"/>
    </RelativeLayout>
</LinearLayout>