<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/exercise_padding"
    android:weightSum="100">

    <TextView
        android:id="@+id/intro_program_name_program"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="33"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:textSize="@dimen/exercise_title_size" />

    <!-- TODO : Retrieve the text from API. -->
    <TextView
        android:id="@+id/intro_program_description_program"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="33"
        android:text="Ceci est le programme théorique par défaut. Il est composé de deux exercices de 15 minutes chacun : Gammes et modes."
        android:textColor="@android:color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="34"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/intro_program_start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise_start_program" />
    </RelativeLayout>

</LinearLayout>
